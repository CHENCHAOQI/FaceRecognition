<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jason.facerecognition.activity.Main3Activity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/face1"
            android:layout_gravity="start|center_vertical"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:padding="2dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btndelete"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center"
        android:text="@string/usr_delete"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
         />

    <include layout="@layout/camera_top_panel" /> <!-- 顶部控制栏 -->

    <include layout="@layout/camera_bottom_panel" /> <!-- 底部控制栏 -->

    <include layout="@layout/face_view" /> <!-- 识别框 -->


</FrameLayout>











